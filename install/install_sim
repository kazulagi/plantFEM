echo " | ===============>            | (70%)\r\c"
mpif90 -fopenmp -shared -fPIC -g -fcheck=all -fintrinsic-modules-path inc/  -c ./src/TSFEMClass/TSFEMClass.f90 -o  ./inc/TSFEMClass.o



echo "Compiling ./src/LoggerClass/LoggerClass.f90" 
