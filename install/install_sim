echo " >> SimulatorClass.o"
echo " | ===================>        | (87%)\r\c"
mpif90 -fopenmp -Ofast -march=native -shared -fPIC -g -fcheck=all -fintrinsic-modules-path inc/  -c ./src/SimulatorClass/SimulatorClass.f90 -o  ./inc/SimulatorClass.o
